<div class="post-preview">
  <h3><%= post.title %></h3>
  <p><%= truncate(post.body, length: 150) %></p>
  <p><small>By <%= post.user.email %></small></p>

  <% if user_signed_in? %>
    <%= link_to "Comment", post_path(post) %> |
    <%= link_to "Like", "#" %> |
    <%= link_to "Repost", "#" %>
  <% else %>
    <%= link_to "Login to comment or repost", new_user_session_path %>
  <% end %>
</div>
